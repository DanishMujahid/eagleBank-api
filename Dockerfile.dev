FROM node:18-alpine

# Install system dependencies
RUN apk add --no-cache \
    sqlite \
    git \
    && rm -rf /var/cache/apk/*

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Generate Prisma client
RUN npm run db:generate

# Expose ports
EXPOSE 3000 5555

# Default command
CMD ["npm", "run", "dev"] 