// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts     Account[]

  @@map("users")
}

model Account {
  id        String   @id @default(cuid())
  accountNumber String @unique
  balance   Float    @default(0)
  currency  String   @default("GBP")
  type      String   @default("CHECKING") // CHECKING, SAVINGS, BUSINESS
  status    String   @default("ACTIVE")  // ACTIVE, SUSPENDED, CLOSED, FROZEN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]

  @@map("accounts")
}

model Transaction {
  id            String   @id @default(cuid())
  type          String   // DEPOSIT, WITHDRAWAL
  amount        Float    // Positive amount
  description   String?  // Optional description
  balanceBefore Float    // Account balance before transaction
  balanceAfter  Float    // Account balance after transaction
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  accountId String
  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("transactions")
} 